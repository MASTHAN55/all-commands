create ec2 instance.
create a role with admin access and attech to ec2 instance.

-- vim main.tf        //
provider "aws" {
region = "ap-south-1"
}
resource "aws_instance" "one" {
count = var.instance_count
ami = "ami--image"
instance_type = var.instance_type
tags = {
Name = var.instance_name
}
}

-- vim variable.tf        //
variable "instance_count" {
}
variable "instance_type" {
}
variable "instance_name" {
}

-- vim dev.tfvars       //
instance_count = 1
instance_type = t2.micro
instance_name = dev.server

terrform init  // download pluggins (.terraform, .terraform.lock.hcl)
terrform plan  // 
terrfom apply
terraform applay -auto-approve   // for all
terraform fmt  //create structor
